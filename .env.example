# Production Environment Configuration
# Copy this to .env.production and configure for your environment

# Database Configuration (REQUIRED)
DB_HOST=your-production-postgres-host
DB_PORT=5432
DB_NAME=exam_verification_production
DB_USER=exam_production_user
DB_PASSWORD=your-secure-production-password

# Security Configuration (REQUIRED)
JWT_SECRET=your-256-bit-secret-key-here-must-be-very-secure
ENCRYPTION_KEY=your-aes-256-encryption-key-here
SESSION_TIMEOUT=1800000

# API Configuration
API_BASE_URL=https://your-production-api.gov.in
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Hardware Configuration
MANTRA_SDK_PATH=/opt/mantra/sdk
IRIS_SCANNER_PORT=/dev/ttyUSB0
FINGERPRINT_QUALITY_THRESHOLD=75

# Government Compliance
AUDIT_RETENTION_DAYS=2555  # 7 years as per government requirements
COMPLIANCE_MODE=GOVERNMENT
GDPR_ENABLED=true

# Monitoring & Alerts
MONITORING_ENABLED=true
ALERT_EMAIL=admin@exam-center.gov.in
LOG_LEVEL=INFO

# Security Features
CERTIFICATE_PINNING=true
ROOT_DETECTION=true
DEBUG_MODE=false

# Network Configuration
OFFLINE_SYNC_ENABLED=true
SYNC_INTERVAL=300000  # 5 minutes
MAX_OFFLINE_RECORDS=10000